{
  "schemaVersion": 1,
  "id": "classicandsimplestatusbars",
  "version": "${version}",

  "name": "Classic and simple status bars",
  "description": "Redeveloped the Vanilla Health and Hunger columns, and added other content to display",
  "authors": [
    "XingChen",
    "Lanfix"
  ],
  "contact": {
    "homepage": "https://github.com/Xing-C/Classic-and-simple-status-bars",
    "sources": "https://github.com/Xing-C/Classic-and-simple-status-bars-fabric",
    "issues": "https://github.com/Xing-C/Classic-and-simple-status-bars/issues"
  },

  "license": "GPL-3.0-only",
  "icon": "image.png",

  "environment": "*",
  "entrypoints": {
    "appleskin": [
      "cn.mcxkly.classicandsimplestatusbars.overlays.AppleSkinEventHandler"
    ]
  },
  "mixins": [
    "classicandsimplestatusbars.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.21",
    "fabric": "*",
    "minecraft": "~1.20",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
